# Example Environment Variables for CoverGen AI
# Copy this file to .env.local for development or .env.production for production

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# OpenRouter API Configuration (Required)
# Sign up at https://openrouter.ai and get your API key
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Site Configuration (Required)
# For development: http://localhost:3001
# For production: https://your-domain.com
NEXT_PUBLIC_SITE_URL=http://localhost:3001

# Supabase Configuration (Required for authentication)
# Create a project at https://supabase.com and get these from project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
# Service role key is needed for server-side operations (keep this secret!)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Development/Production Mode Settings
# Set to true only in development to bypass usage limits and enable dev features
NEXT_PUBLIC_DEV_MODE=true
NEXT_PUBLIC_BYPASS_USAGE_LIMIT=true

# Additional Production Environment Variables (Optional)
# NODE_ENV=production
# ANALYZE=false

# Payment Configuration (Creem)
# Sign up at https://creem.io and get your API keys
# Test mode will be automatically enabled in development
NEXT_PUBLIC_CREEM_PUBLIC_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
CREEM_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
CREEM_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
NEXT_PUBLIC_CREEM_TEST_MODE=true
# Optional: Creem account ID for connected accounts
# NEXT_PUBLIC_CREEM_ACCOUNT_ID=acct_xxxxxxxxxxxxxxxx

# Subscription and Trial Configuration
# Trial days for each tier (set to 0 to disable trials)
TRIAL_DAYS=0
NEXT_PUBLIC_TRIAL_DAYS=0
# Daily generation limits for each tier
FREE_DAILY_LIMIT=3
NEXT_PUBLIC_FREE_DAILY_LIMIT=3
PRO_TRIAL_DAILY_LIMIT=4
NEXT_PUBLIC_PRO_TRIAL_DAILY_LIMIT=4
PRO_PLUS_TRIAL_DAILY_LIMIT=6
NEXT_PUBLIC_PRO_PLUS_TRIAL_DAILY_LIMIT=6
# Monthly generation limits (images + videos)
FREE_MONTHLY_LIMIT=10
NEXT_PUBLIC_FREE_MONTHLY_LIMIT=10
PRO_MONTHLY_LIMIT=100
NEXT_PUBLIC_PRO_MONTHLY_LIMIT=100
PRO_PLUS_MONTHLY_LIMIT=200
NEXT_PUBLIC_PRO_PLUS_MONTHLY_LIMIT=200

# Email Configuration (Choose one provider)
# Option 1: Zoho Mail SMTP (recommended for covergen.pro)
EMAIL_SERVER_HOST=smtp.zoho.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_SECURE=false
EMAIL_SERVER_USER=noreply@covergen.pro
EMAIL_SERVER_PASSWORD=your-zoho-app-password
EMAIL_FROM=noreply@covergen.pro
EMAIL_REPLY_TO=support@covergen.pro

# Option 2: Resend (alternative)
# RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Option 3: SendGrid (alternative)
# SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Option 4: Console (development only - logs emails to console)
# FORCE_EMAIL_PROVIDER=console

# BestAuth Configuration
BESTAUTH_DATABASE_URL=postgresql://user:password@localhost:5432/covergen
BESTAUTH_JWT_SECRET=your-secret-key-at-least-32-characters
BESTAUTH_GOOGLE_CLIENT_ID=your-google-oauth-client-id
BESTAUTH_GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# Future Microservices Configuration (When implemented)
# AUTH_SERVICE_URL=https://auth.your-domain.com
# GENERATION_SERVICE_URL=https://generation.your-domain.com
# PAYMENT_SERVICE_URL=https://payment.your-domain.com
# REDIS_URL=redis://your-redis-url
# DATABASE_URL=postgresql://user:password@host:port/database
# Video Generation Validation
VALIDATION_ENABLED=true
VALIDATION_MODE=strict
VALIDATION_TIMEOUT_MS=2000

# Validation Layers
VALIDATION_LAYER_BASIC=true
VALIDATION_LAYER_QUALITY=true
VALIDATION_LAYER_SAFETY=true
VALIDATION_LAYER_COPYRIGHT=true

# Validation Thresholds
VALIDATION_FACE_CONFIDENCE=0.7
VALIDATION_LOGO_CONFIDENCE=0.7
VALIDATION_NSFW_CONFIDENCE=0.7

# Google Cloud Vision API
# Get your API key from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLOUD_VISION_API_KEY=your_api_key_here

# DeepSeek API Configuration (Required for AI Prompt Enhancement)
# Sign up at https://platform.deepseek.com and get your API key
DEEPSEEK_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
