'use client'

import Link from 'next/link'
import { Button } from '@/components/ui/button'
import { Card, CardContent } from '@/components/ui/card'
import { Youtube, Sparkles, TrendingUp, Clock, Shield } from 'lucide-react'
import { YouTubeEnhancedContent } from './enhanced-content'
import { generatePlatformSchema, generateFAQSchema, generateBreadcrumbSchema } from '@/lib/seo/schema'
import { Breadcrumb, BreadcrumbWrapper } from '@/components/ui/breadcrumb'
import PlatformShowcaseOptimized from '@/components/platform-showcase-optimized'
import { platformShowcases } from '@/lib/platform-showcases'
import { PlatformRateLimitWrapper } from '@/components/platform-rate-limit-wrapper'
import { useRouter } from 'next/navigation'

const features = [
  {
    icon: Youtube,
    title: 'YouTube Optimized',
    description: 'Perfect 1280x720 dimensions with safe zones for duration overlay'
  },
  {
    icon: TrendingUp,
    title: 'Boost CTR by 40%',
    description: 'Eye-catching designs proven to increase click-through rates'
  },
  {
    icon: Clock,
    title: 'Generate in Seconds',
    description: 'Create multiple thumbnail options in under 10 seconds'
  },
  {
    icon: Shield,
    title: 'Algorithm Friendly',
    description: 'Optimized for YouTube discovery and search algorithms'
  }
]

const templates = [
  'Gaming Thumbnails',
  'Vlog Thumbnails',
  'Tutorial Thumbnails',
  'Review Thumbnails',
  'Reaction Thumbnails',
  'Educational Content',
  'Entertainment Videos',
  'Tech Reviews'
]

function YouTubeThumbnailMakerContent({ locale, translations, onGenerate, isGenerating, disabled }: { 
  locale: string, 
  translations: any,
  onGenerate?: () => Promise<void>,
  isGenerating?: boolean,
  disabled?: boolean
}) {
  const router = useRouter()
  // Enhanced FAQ with more questions
  const faqs = [
    {
      question: 'What is the best size for YouTube thumbnails?',
      answer: 'The optimal YouTube thumbnail size is 1280x720 pixels with a 16:9 aspect ratio. CoverGen AI automatically generates thumbnails in this exact size for perfect YouTube compatibility.'
    },
    {
      question: 'How can I make my YouTube thumbnails more clickable?',
      answer: 'Use high contrast colors, clear readable text, expressive faces, and avoid cluttered designs. CoverGen AI\'s YouTube optimization ensures your thumbnails follow these best practices automatically.'
    },
    {
      question: 'Can I use AI-generated thumbnails commercially?',
      answer: 'Yes! With CoverGen AI Pro and Pro+ plans, you get full commercial usage rights for all generated thumbnails, perfect for monetized YouTube channels.'
    },
    {
      question: 'How long does it take to generate a YouTube thumbnail?',
      answer: 'CoverGen AI generates professional YouTube thumbnails in under 10 seconds using advanced AI technology. You can create multiple variations instantly to find the perfect thumbnail.'
    },
    {
      question: 'Do thumbnails really affect YouTube views?',
      answer: 'Absolutely! Studies show that optimized thumbnails can increase click-through rates by up to 154%. A compelling thumbnail is often the difference between a video with 100 views and one with 100,000 views.'
    }
  ]

  const faqSchema = generateFAQSchema(faqs)
  
  const breadcrumbItems = [
    { name: 'Home', url: 'https://covergen.pro' },
    { name: 'Platforms', url: 'https://covergen.pro/platforms' },
    { name: 'YouTube Thumbnail Maker', url: 'https://covergen.pro/platforms/youtube' }
  ]
  
  const breadcrumbSchema = generateBreadcrumbSchema(breadcrumbItems)
  
  const platformSchema = generatePlatformSchema('youtube', [
    'AI-powered thumbnail generation',
    'Perfect 1280x720 dimensions',
    'Mobile-optimized designs',
    'A/B testing recommendations',
    'YouTube algorithm optimization',
    'One-click generation',
    'Commercial usage rights'
  ])

  return (
    <>
      <script
        type="application/ld+json"
        dangerouslySetInnerHTML={{ __html: JSON.stringify([faqSchema, breadcrumbSchema, platformSchema]) }}
      />
      
      <div className="min-h-screen bg-background">
        <BreadcrumbWrapper>
          <Breadcrumb items={[
            { name: 'Platforms', href: `/${locale}/platforms` },
            { name: 'YouTube', current: true }
          ]} />
        </BreadcrumbWrapper>
        
        {/* Hero Section */}
        <section className="py-20 bg-gradient-to-br from-red-50 to-red-100">
          <div className="container mx-auto px-4">
            <div className="max-w-4xl mx-auto text-center">
              <div className="flex justify-center mb-6">
                <div className="p-4 bg-red-600 rounded-3xl">
                  <Youtube className="w-12 h-12 text-white" />
                </div>
              </div>
              
              <h1 className="text-5xl md:text-6xl font-bold mb-6 text-gray-900">
                YouTube Thumbnail Maker
              </h1>
              
              <p className="text-xl md:text-2xl text-gray-700 mb-8 leading-relaxed">
                Create thumbnails that <span className="text-red-600 font-semibold">stop the scroll</span> and 
                boost your views. AI-powered generation optimized for YouTube's algorithm.
              </p>
              
              <div className="flex flex-col sm:flex-row gap-4 justify-center mb-8">
                <Button 
                  size="lg" 
                  className="bg-red-600 hover:bg-red-700 text-white px-8 py-6 text-lg"
                  onClick={() => {
                    if (onGenerate) {
                      onGenerate()
                    } else {
                      router.push(`/${locale}#generator`)
                    }
                  }}
                  disabled={disabled || isGenerating}
                >
                  <Sparkles className="w-5 h-5 mr-2" />
                  {isGenerating ? 'Checking...' : 'Start Creating Thumbnails'}
                </Button>
                <Link href={`/${locale}#pricing`}>
                  <Button size="lg" variant="outline" className="px-8 py-6 text-lg">
                    View Pricing
                  </Button>
                </Link>
              </div>
              
              <p className="text-gray-600">
                No credit card required â€¢ Start creating now
              </p>
            </div>
          </div>
        </section>

        {/* Features Grid */}
        <section className="py-16 bg-white">
          <div className="container mx-auto px-4">
            <h2 className="text-3xl md:text-4xl font-bold text-center mb-12">
              YouTube-Specific Features
            </h2>
            
            <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 max-w-6xl mx-auto">
              {features.map((feature) => (
                <Card key={feature.title} className="hover:scale-105 transition-transform">
                  <CardContent className="p-6 text-center">
                    <div className="flex justify-center mb-4">
                      <div className="p-3 bg-red-100 rounded-2xl">
                        <feature.icon className="w-8 h-8 text-red-600" />
                      </div>
                    </div>
                    <h3 className="text-xl font-semibold mb-2">{feature.title}</h3>
                    <p className="text-gray-600">{feature.description}</p>
                  </CardContent>
                </Card>
              ))}
            </div>
          </div>
        </section>

        {/* AI Transformation Showcase */}
        <PlatformShowcaseOptimized
          platform="YouTube"
          showcases={platformShowcases.youtube}
          primaryColor="red"
        />

        {/* Templates Section */}
        <section className="py-16 bg-white">
          <div className="container mx-auto px-4">
            <div className="max-w-4xl mx-auto">
              <h2 className="text-3xl md:text-4xl font-bold text-center mb-12">
                Thumbnail Templates for Every YouTube Niche
              </h2>
              
              <div className="grid grid-cols-2 md:grid-cols-4 gap-4">
                {templates.map((template) => (
                  <div key={template} className="bg-gray-50 rounded-2xl p-4 text-center hover:shadow-lg transition-shadow">
                    <span className="text-gray-700 font-medium">{template}</span>
                  </div>
                ))}
              </div>
              
              <div className="text-center mt-12">
                <p className="text-lg text-gray-600 mb-6">
                  Plus hundreds more styles tailored to your content
                </p>
                <Link href={`/${locale}#generator`}>
                  <Button size="lg" className="bg-red-600 hover:bg-red-700 text-white">
                    Explore All Templates
                  </Button>
                </Link>
              </div>
            </div>
          </div>
        </section>

        {/* Best Practices */}
        <section className="py-16 bg-white">
          <div className="container mx-auto px-4">
            <div className="max-w-4xl mx-auto">
              <h2 className="text-3xl md:text-4xl font-bold text-center mb-12">
                YouTube Thumbnail Best Practices
              </h2>
              
              <div className="space-y-6">
                <div className="bg-gray-50 rounded-2xl p-6">
                  <h3 className="text-xl font-semibold mb-3">1. Use High Contrast Colors</h3>
                  <p className="text-gray-600">
                    Thumbnails need to stand out in YouTube's busy interface. Our AI automatically 
                    applies high contrast to ensure maximum visibility.
                  </p>
                </div>
                
                <div className="bg-gray-50 rounded-2xl p-6">
                  <h3 className="text-xl font-semibold mb-3">2. Keep Text Large and Readable</h3>
                  <p className="text-gray-600">
                    Remember that most viewers see thumbnails on mobile devices. CoverGen AI ensures 
                    text remains readable even at small sizes.
                  </p>
                </div>
                
                <div className="bg-gray-50 rounded-2xl p-6">
                  <h3 className="text-xl font-semibold mb-3">3. Avoid the Bottom-Right Corner</h3>
                  <p className="text-gray-600">
                    YouTube displays the video duration in the bottom-right. Our templates automatically 
                    keep important elements away from this area.
                  </p>
                </div>
                
                <div className="bg-gray-50 rounded-2xl p-6">
                  <h3 className="text-xl font-semibold mb-3">4. Test Multiple Variations</h3>
                  <p className="text-gray-600">
                    Generate multiple thumbnail options and A/B test them. Pro users can create 
                    unlimited variations to find the perfect thumbnail.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </section>

        {/* CTA Section */}
        <section className="py-20 bg-gradient-to-br from-red-600 to-red-700 text-white">
          <div className="container mx-auto px-4 text-center">
            <h2 className="text-4xl md:text-5xl font-bold mb-6">
              Ready to Boost Your YouTube Views?
            </h2>
            <p className="text-xl md:text-2xl mb-8 opacity-90">
              Join thousands of YouTubers creating stunning thumbnails with AI
            </p>
            <Button 
              size="lg" 
              className="bg-white text-red-600 hover:bg-gray-100 px-8 py-6 text-lg font-semibold"
              onClick={() => {
                if (onGenerate) {
                  onGenerate()
                } else {
                  router.push(`/${locale}#generator`)
                }
              }}
              disabled={disabled || isGenerating}
            >
              {isGenerating ? 'Checking...' : 'Create Your First Thumbnail Free'}
            </Button>
          </div>
        </section>

        {/* Enhanced Content for SEO and AdSense */}
        <YouTubeEnhancedContent />
      </div>
    </>
  )
}

export default function YouTubeThumbnailMakerClient({ locale, translations }: { locale: string, translations: any }) {
  const handleGenerate = async () => {
    // Navigate to generator section
    window.location.href = `/${locale}#generator`
  }
  
  return (
    <PlatformRateLimitWrapper
      platform="youtube"
      onGenerate={handleGenerate}
      showUsageIndicator={true}
    >
      <YouTubeThumbnailMakerContent 
        locale={locale} 
        translations={translations}
      />
    </PlatformRateLimitWrapper>
  )
}