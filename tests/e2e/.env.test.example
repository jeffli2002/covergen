# Creem Test Environment Configuration
# Copy this file to .env.test and fill in your test API keys

# Enable Creem test mode (required for tests)
NEXT_PUBLIC_CREEM_TEST_MODE=true

# Creem Test API Keys (get from https://dashboard.creem.io/test/api-keys)
NEXT_PUBLIC_CREEM_PUBLIC_KEY=pk_test_YOUR_TEST_PUBLIC_KEY_HERE
CREEM_SECRET_KEY=sk_test_YOUR_TEST_SECRET_KEY_HERE
CREEM_WEBHOOK_SECRET=whsec_test_YOUR_TEST_WEBHOOK_SECRET_HERE

# Test Environment URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Test Database (optional - for isolated test data)
DATABASE_URL=postgresql://postgres:password@localhost:5432/coverimage_test
DIRECT_URL=postgresql://postgres:password@localhost:5432/coverimage_test

# Supabase Test Keys (optional - use test project)
NEXT_PUBLIC_SUPABASE_URL=https://your-test-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-test-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-test-service-role-key

# Test Configuration
NODE_ENV=test
SKIP_WEBHOOK_SIGNATURE=false # Set to true only for local debugging

# Test User Seeds (optional)
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=Test123456!

# Creem Test Mode Features
CREEM_TEST_CLOCK=auto # Enables time manipulation for subscription testing