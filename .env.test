# Creem Payment Integration Test Environment Variables
# Copy this file to .env.test and fill in your test credentials

# Creem Test Mode Keys (get from https://dashboard.creem.io)
NEXT_PUBLIC_CREEM_PUBLIC_KEY=pk_test_your_test_public_key_here
CREEM_SECRET_KEY=sk_test_your_test_secret_key_here
CREEM_WEBHOOK_SECRET=whsec_test_your_webhook_secret_here

# Enable test mode
NEXT_PUBLIC_CREEM_TEST_MODE=true

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# OpenAI (for cover generation in tests)
OPENAI_API_KEY=your-openai-key-here

# Optional: Skip webhook signature verification in local tests
# SKIP_WEBHOOK_SIGNATURE=true

# Optional: Enable debug logging
# DEBUG=true